        "allowJs": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "importsNotUsedAsValues": "preserve",
        "module": "ES6",
        "target": "ES6",
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
